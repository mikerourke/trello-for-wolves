{
  "name": "trello-for-wolves",
  "version": "1.5.3",
  "description": "Node.js wrapper for Trello API...for wolves.",
  "engines": {
    "node": ">=12"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikerourke/trello-for-wolves"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "keywords": [
    "trello",
    "api",
    "wolves",
    "wolf"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikerourke/trello-for-wolves/issues"
  },
  "homepage": "https://github.com/mikerourke/trello-for-wolves#readme",
  "scripts": {
    "build:clean": "rimraf lib",
    "cleanup": "rimraf .nyc_output && rimraf coverage && rimraf lib",
    "lint": "eslint src --color || exit 0"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "lodash.snakecase": "^4.1.1",
    "qs": "^6.9.1"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "rimraf": "^3.0.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-airbnb-base",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "import",
      "flowtype"
    ],
    "settings": {
      "ecmascript": 6
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "arrowFunctions": true,
        "binaryLiterals": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "modules": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralDuplicateProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "octalLiterals": true,
        "regexUFlag": true,
        "regexYFlag": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "unicodeCodePointEscapes": true,
        "globalReturn": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": [
        "error",
        100,
        2,
        {
          "ignoreComments": true,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreTrailingComments": true,
          "ignoreUrls": true
        }
      ],
      "class-methods-use-this": "off",
      "flowtype/define-flow-type": "warn",
      "flowtype/use-flow-type": "warn"
    }
  },
  "eslintIgnore": [
    "internals/",
    "docs/",
    "src/types.js",
    "tests/",
    "lib/"
  ]
}
